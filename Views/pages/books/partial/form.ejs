<div class="form-group">

    <label for="title">
        Title
    </label>

    <input type="text" name="title" class="
                                            form-control
                                            <%=
                                            errors.title
                                            ?
                                            'is-invalid'
                                            :
                                            ''
                                            %>
                                          " id="title" value="<%= oldData.title || book.title %>" />
    <div class="invalid-feedback">
        <%= errors.title ? errors.title.msg : "" %>
    </div>
</div>

<div class="form-group">
    <label for="description">
        Description
    </label>
    <input type="text" name="description" value="<%= oldData.description || book.description %>" class="form-control
                                    <%= errors.description ? 'is-invalid' : '' %>" id="description" />
    <div class="invalid-feedback">
        <%= errors.description ? errors.description.msg : "" %>
    </div>
</div>
<div class="form-group">
    <label class="form-label" for="image">Choose Book Cover Page</label>
    <input type="file" class="form-control
                                                            <%= errors.image ? 'is-valid': '' %> " id="image"
        name="image" />
    <% if (book.image) { %>
        <img src="/uploads/<%= book.image %>" alt="<%= book.title %>" class="img-thumbnail">
        <% } %>
</div>
<br>
<button type="submit" class="btn btn-primary">
    Create Book
</button>